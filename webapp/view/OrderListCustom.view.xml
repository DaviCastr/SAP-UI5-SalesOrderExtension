<mvc:View controllerName="apps.dflc.salesorderts.controller.OrderList" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" displayBlock="true"
	xmlns:core="sap.ui.core" xmlns:t="sap.ui.table" xmlns:fb="sap.ui.comp.filterbar"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Page id="page" title="{i18n>title}">
		<content>
			<fb:FilterBar id="filterBar1" reset="onFilterReset" search="onFilterSearch">
				<fb:filterItems>
					<fb:FilterItem id="_IDGenFilterItem" name="SalesOrderID" label="{i18n>SalesOrderID}">
						<fb:control>
							<Input id="SalesOrder.SalesOrderID" value="{filter>/SalesOrderID}"/>
						</fb:control>
					</fb:FilterItem>
					<fb:FilterItem id="_IDGenFilterItem1" name="CustomerID" label="{i18n>CustomerID}">
						<fb:control>
							<Input id="SalesOrder.CustomerID" value="{filter>/CustomerID}"/>
						</fb:control>
					</fb:FilterItem>
					<fb:FilterItem id="_IDGenFilterItem2" name="OrderField" label="{i18n>OrderField}">
						<fb:control>
							<Select id="OrderField" selectedKey="{filter>/OrderField}">
								<items>
									<core:Item id="_IDGenItem5" text="" key=""/>
									<core:Item id="_IDGenItem6" text="{i18n>SalesOrderID}" key="SalesOrderID"/>
									<core:Item id="_IDGenItem7" text="{i18n>CustomerID}" key="CustomerID"/>
									<core:Item id="_IDGenItem8" text="{i18n>CreationDateTime}" key="CreationDateTime"/>
									<core:Item id="_IDGenItem9" text="{i18n>CreatedBy}" key="CreatedBy"/>
									<core:Item id="_IDGenItem10" text="{i18n>TotalItems}" key="TotalItems"/>
									<core:Item id="_IDGenItem11" text="{i18n>TotalFreight}" key="TotalFreight"/>
									<core:Item id="_IDGenItem12" text="{i18n>TotalOrder}" key="TotalOrder"/>
									<core:Item id="_IDGenItem13" text="{i18n>Status}" key="Status"/>
								</items>
							</Select>
						</fb:control>
					</fb:FilterItem>
					<fb:FilterItem id="_IDGenFilterItem3" name="OrderType" label="{i18n>OrderType}">
						<fb:control>
							<Select id="OrderType" selectedKey="{filter>/OrderType}">
								<items>
									<core:Item id="_IDGenItem14" text="" key=""/>
									<core:Item id="_IDGenItem15" text="{i18n>ASC}" key="ASC"/>
									<core:Item id="_IDGenItem16" text="{i18n>DESC}" key="DESC"/>
								</items>
							</Select>
						</fb:control>
					</fb:FilterItem>
					<fb:FilterItem id="_IDGenFilterItem4" name="Limite" label="{i18n>Limite}">
						<fb:control>
							<Input id="Limite" value="{filter>/Limite}" type="Number"/>
						</fb:control>
					</fb:FilterItem>
					<fb:FilterItem id="_IDGenFilterItem5" name="Ignore" label="{i18n>Ignore}">
						<fb:control>
							<Input id="Ignore" value="{filter>/Ignore}" type="Number"/>
						</fb:control>
					</fb:FilterItem>
				</fb:filterItems>
			</fb:FilterBar>
			<HBox id="_IDGenHBox1" justifyContent="End">
				<Button id="_IDGenButton4" text="{i18n>btnSupplier}" press="onChangeStatus('L')" class="sapUiSmallMarginEnd sapUiSmallMarginTop"/>
				<Button id="_IDGenButton5" text="{i18n>btnInvoice}" press="onChangeStatus('F')" class="sapUiSmallMarginEnd sapUiSmallMarginTop"/>
				<Button text="{i18n>btnCancell}" id="bt-cancel" press="onChangeStatus('C')" class="sapUiSmallMarginEnd sapUiSmallMarginTop"/>
				<Button text="{i18n>btnNewOrder}" id="bt-new" press="onNew" class="sapUiSmallMarginEnd sapUiSmallMarginTop"/>
			</HBox>
			<t:Table id="table1" rows="{table>/}" rowMode="Fixed" threshold="100" visibleRowCount="100" selectionMode="MultiToggle"
				class="sapUiSmallMargin" enableBusyIndicator="true">
				<t:toolbar>
					<OverflowToolbar id="_IDGenOverflowToolbar1">
						<Title id="title" text="Ordens"></Title>
					</OverflowToolbar>
				</t:toolbar>
				<t:columns>
					<t:Column id="_IDGenColumn8" width="100px" sortProperty="SalesOrderID">
						<Label id="_IDGenLabel7" text="{i18n>SalesOrderID}"/>
						<t:template>
							<Text id="_IDGenText2" text="{table>SalesOrderID}" wrapping="false"/>
						</t:template>
					</t:Column>
					<t:Column id="_IDGenColumn9" width="100px" sortProperty="CreationDateTime">
						<Label id="_IDGenLabel8" text="{i18n>CreationDateTime}"/>
						<t:template>
							<Text id="_IDGenText3"
								text="{path: 'table>CreationDateTime', type: 'sap.ui.model.odata.type.Date', formatOptions: { UTC:true, pattern: 'dd/MM/yyyy'}}"
								wrapping="false"/>
						</t:template>
					</t:Column>
					<t:Column id="_IDGenColumn10" width="100px" sortProperty="CustomerID" filterProperty="CustomerID" autoResizable="true">
						<Label id="_IDGenLabel9" text="{i18n>CustomerID}"/>
						<t:template>
							<Text id="_IDGenText4" text="{table>CustomerID}" wrapping="false"/>
						</t:template>
					</t:Column>
					<t:Column id="_IDGenColumn11" width="100px" sortProperty="CreatedBy" filterProperty="CreatedBy" autoResizable="true">
						<Label id="_IDGenLabel10" text="{i18n>CreatedBy}"/>
						<t:template>
							<Text id="_IDGenText5" text="{table>CreatedBy}" wrapping="false"/>
						</t:template>
					</t:Column>
					<t:Column id="_IDGenColumn12" width="100px" sortProperty="TotalItems" filterProperty="TotalItems" autoResizable="true">
						<Label id="_IDGenLabel11" text="{i18n>TotalItems}"/>
						<t:template>
							<Text id="_IDGenText6" text="{path: 'table>TotalItems', formatter: '.formatter.formatPrice'}" wrapping="false"/>
						</t:template>
					</t:Column>
					<t:Column id="_IDGenColumn13" width="100px" sortProperty="TotalFreight" filterProperty="TotalFreight" autoResizable="true">
						<Label id="_IDGenLabel12" text="{i18n>TotalFreight}"/>
						<t:template>
							<Text id="_IDGenText7" text="{path: 'table>TotalFreight', formatter: '.formatter.formatPrice'}" wrapping="false"/>
						</t:template>
					</t:Column>
					<t:Column id="_IDGenColumn14" width="100px" sortProperty="TotalOrder" filterProperty="TotalOrder" autoResizable="true">
						<Label id="_IDGenLabel13" text="{i18n>TotalOrder}"/>
						<t:template>
							<Text id="_IDGenText8" text="{path: 'table>TotalOrder', formatter: '.formatter.formatPrice'}" wrapping="false"/>
						</t:template>
					</t:Column>
					<t:Column id="_IDGenColumn15" width="100px" sortProperty="Status" filterProperty="Status" autoResizable="true">
						<Label id="_IDGenLabel14" text="{i18n>Status}"/>
						<t:template>
							<Text id="_IDGenText9" text="{path: 'table>Status', formatter: '.formatter.formatStatus'}" wrapping="false"/>
						</t:template>
					</t:Column>
					<t:Column id="_IDGenColumn16" width="135px">
						<Label id="_IDGenLabel15" text="{i18n>Opcoes}"/>
						<t:template>
							<HBox id="_IDGenHBox2">
								<Button id="_IDGenButton1" app:SalesOrderID="{table>SalesOrderID}" icon="sap-icon://edit" press="onEdit"/>
								<Button id="_IDGenButton2" app:SalesOrderID="{table>SalesOrderID}" icon="sap-icon://display" press="onDetail"/>
								<Button id="btnDelete" app:SalesOrderID="{table>SalesOrderID}" icon="sap-icon://delete" press="onDelete" class="sapUiTinyMarginBegin"/>
							</HBox>
						</t:template>
					</t:Column>
				</t:columns>
			</t:Table>
		</content>
	</Page>
</mvc:View>